{
  "name": "DSP: Fire Department Project Environment",
  "build": { "dockerfile": "Dockerfile" },
  "customizations": {
    "git.branchProtection": ["main", "master"],
    "settings": {
      "ruff.path": "/usr/local/bin/ruff",
      "ruff.lint.args": ["--config=src/dsp-dagster/pyproject.toml"],
      "ruff.organizeImports": true,
      "files.insertFinalNewline": true,
      "files.trimTrailingWhitespace": true,
      "files.autoSave": "onFocusChange",
      "python.testing.unittestEnabled": false,
      "python.testing.autoTestDiscoverOnSaveEnabled": true,
      "python.analysis.indexing": true,
      "python.analysis.autoImportCompletions": true,
      "python.terminal.activateEnvInCurrentTerminal": true,
      "python.defaultInterpreterPath": "/usr/local/bin/python",
      "rewrap.wrappingColumn": 88,
      "[json]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
      },
      "[python]": {
        "editor.codeActionsOnSave": {
          "source.fixAll": true,
          "source.organizeImports.ruff": true
        },
        "editor.defaultFormatter": "ms-python.black-formatter"
      },
      "editor.codeActionsOnSave": {
        "source.removeUnusedImports": true,
        "source.organizeImports": true
      },
      "scm.defaultViewMode": "tree",
      "liveServer.settings.NoBrowser": true,
      "liveServer.settings.port": 5000,
      "terminal.integrated.defaultProfile.linux": "zsh",
      "git.autofetch": true,
      "git.confirmSync": false,
      "git.ignoreMissingGitWarning": true,
      "prettier.bracketSameLine": true,
      "prettier.endOfLine": "auto",
      "editor.tabSize": 4,
      "editor.formatOnSave": true,
      "editor.largeFileOptimizations": false,
      "editor.suggest.preview": true
    },
    "vscode": {
      "extensions": [
        // "ms-azuretools.vscode-docker",
        "tamasfe.even-better-toml",
        "rangav.vscode-thunder-client",
        "mkxml.vscode-filesize",
        "VisualStudioExptTeam.vscodeintellicode",
        "ms-python.pylint",
        "AykutSarac.jsoncrack-vscode",
        "yzhang.markdown-all-in-one",
        "DavidAnson.vscode-markdownlint",
        "christian-kohler.path-intellisense",
        "ms-python.black-formatter",
        "ms-python.python",
        "donjayamanne.python-extension-pack",
        "charliermarsh.ruff",
        "richie5um2.vscode-sort-json",
        "redhat.vscode-yaml",
        "visualstudioexptteam.vscodeintellicode",
        "visualstudiotxptteam.vscodeintellicode-completions",
        "esbenp.prettier-vscode",
        "dbaeumer.vscode-eslint",
        "christian-kohler.npm-intellisense",
        "ritwickdey.liveserver",
        "ms-vscode.wordcount",
        "streetsidesoftware.code-spell-checker",
        "redhat.fabric8-analytics",
        "bierner.github-markdown-preview",
        "ms-python.isort"
      ]
    }
  }
  // "forwardPorts": [4000]
}
